{
  "name": "pixel-vibe",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview --host 0.0.0.0",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "validate": "./scripts/validate.sh",
    "prepare": "husky"
  },
  "dependencies": {
    "phaser": "^3.80.0",
    "vite": "^5.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.18.1",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "canvas": "^2.11.2",
    "husky": "^9.1.7",
    "jsdom": "^25.0.0",
    "lint-staged": "^16.1.6",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm run typecheck",
      "pnpm run build"
    ]
  }
}
